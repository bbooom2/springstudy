<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="p" class="com.gdu.app01.xml05.Person">
		<!-- List  -->
		<property name="hobbies">
			<list>
				<value>여행</value>
				<value>운동</value>
				<value>영화</value>
			</list>
		</property>
		
		<!-- Set -->
		<property name="contacts">
			<set>
			<!-- 똑같은거 3개 넣었으나 결과적으로는 2개만 보일 것  -->
				<value>010-1234-5678</value>
				<value>010-1234-5678</value>
				<value>010-1234-5678</value>
				<value>010-5678-9012</value>
			</set>
		
		</property>
		
		<!-- Map  : key와 value가 한쌍-->
		<property name="friends">
			<map> 
				<entry key="동네 친구"  value="영심이"></entry>
				<entry key="학교 친구"  value="등심이"></entry>
				<entry key="회사 친구"  value="덕심이"></entry>
			</map>
		</property>
	</bean>

</beans>
